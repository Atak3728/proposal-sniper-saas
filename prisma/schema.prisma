// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  bio       String?  @db.Text
  credits   Int      @default(3)
  isPro     Boolean  @default(false)
  resumeProfile Json?
  applications JobApplication[]
}

model ProposalHistory {
  id              String   @id @default(uuid())
  userId          String
  sourceText      String   @db.Text
  generatedOutput String   @db.Text
  createdAt       DateTime @default(now())

  @@index([userId])
}

model JobApplication {
  id              String   @id @default(cuid())
  userId          String
  // Relation to UserProfile
  user            UserProfile @relation(fields: [userId], references: [userId], onDelete: Cascade)

  companyName     String
  jobTitle        String
  jobDescription  String   @db.Text
  status          String   @default("DRAFT") // DRAFT, APPLIED, INTERVIEWING, OFFER, REJECTED
  
  tailoredResume  Json?
  coverLetter     String?  @db.Text
  coldEmail       String?  @db.Text
  linkedinMessage String?  @db.Text
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
}
